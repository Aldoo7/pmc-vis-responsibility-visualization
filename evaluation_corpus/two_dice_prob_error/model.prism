// Buggy Two Dice Model - Incorrect Probability Distribution
// Bug: Module die1 state s1=3 has wrong transition probabilities (0.7/0.3 instead of 0.5/0.5)
// Expected: Violates fairness property - die1 biased toward faster termination

mdp

module die1
	// local state
	s1 : [0..7] init 0;
	// value of the die
	d1 : [0..6] init 0;
	
	[] s1=0 -> 0.5 : (s1'=1) + 0.5 : (s1'=2);
	[] s1=1 -> 0.5 : (s1'=3) + 0.5 : (s1'=4);
	[] s1=2 -> 0.5 : (s1'=5) + 0.5 : (s1'=6);
	
	// BUG: This transition should be 0.5/0.5, not 0.7/0.3
	[] s1=3 -> 0.7 : (s1'=1) + 0.3 : (s1'=7) & (d1'=1);
	
	[] s1=4 -> 0.5 : (s1'=7) & (d1'=2) + 0.5 : (s1'=7) & (d1'=3);
	[] s1=5 -> 0.5 : (s1'=7) & (d1'=4) + 0.5 : (s1'=7) & (d1'=5);
	[] s1=6 -> 0.5 : (s1'=2) + 0.5 : (s1'=7) & (d1'=6);
	[] s1=7 & s2=7 -> (s1'=7);
endmodule

module die2 = die1 [ s1=s2, s2=s1, d1=d2 ] endmodule

rewards "coin_flips"
	[] !(s1=7 & s2=7) : 1;
endrewards

label "done" = s1=7 & s2=7;
label "die1_decided" = s1=7;
label "die2_decided" = s2=7;
label "error" = s1=7 & !(s2=7); // Alias for responsibility tool - die1 finished but not die2
