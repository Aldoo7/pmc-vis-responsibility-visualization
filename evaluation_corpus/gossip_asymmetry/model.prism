// Gossip protocol with asymmetric probability bug: node1 spreads less often
mdp

// variables indicate whether node i is informed (1) or not (0)
module node1
    inf1 : bool init true;   // initially informed

    // when node1 is informed, it may send to node2
    [send12] inf1 -> 0.3 : (inf1' = inf1) + 0.7 : (inf1' = inf1) & (inf2' = true);
endmodule

module node2
    inf2 : bool init false;

    // node2 forwards to node3 when informed
    [send23] inf2 -> 0.5 : (inf2' = inf2) + 0.5 : (inf2' = inf2) & (inf3' = true);
endmodule

module node3
    inf3 : bool init false;

    // node3 forwards to node1 when informed (rarely used here)
    [send31] inf3 -> 0.5 : (inf3' = inf3) + 0.5 : (inf3' = inf3) & (inf1' = true);
endmodule

// labeling convenience
formula all_inf = (inf1 & inf2 & inf3);
label "all_inf" = all_inf;
label "error" = all_inf; // Alias for responsibility tool
